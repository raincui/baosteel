<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baosight.lan">

    <uses-sdk android:minSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.android.baosteel.lan.baseui.MApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

         <activity android:name="com.android.baosteel.lan.baseui.MainActivity"/>
        <activity android:name="com.android.baosteel.lan.login.LoginActivity"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.baosteel.lan.express.ExpressActivity" />
        <activity
            android:name="com.android.baosteel.lan.news.NewsDetailActivity"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity android:name="com.android.baosteel.lan.news.SpecialNewsActivity" />
        <activity android:name="com.android.baosteel.lan.baseui.DocLinkActivity" />
        <activity android:name="com.android.baosteel.lan.news.SearchActivity" />
        <activity android:name="com.android.baosteel.lan.news.SearchListActivity" />
        <activity
            android:name="com.android.baosteel.lan.news.comment.CommentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.android.baosteel.lan.express.WechatListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.android.baosteel.lan.news.LabelNewsActivity"
            android:launchMode="singleTask" />
        <activity android:name="com.android.baosteel.lan.news.comment.MineInfoActivity" />
        <activity
            android:name="com.android.baosteel.lan.news.PhotoBrowserActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <!-- <activity android:name="com.android.baosteel.lan.login.LoginActivity"/> -->
        <activity android:name="com.android.baosteel.lan.login.RegisterActivity" />
        <activity android:name="com.android.baosteel.lan.mine.MineNewsActivity" />
    </application>

</manifest>