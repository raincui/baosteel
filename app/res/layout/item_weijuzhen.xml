<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:img="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp">



    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_icon"
        img:placeholderImage="@drawable/default_pic"
        img:placeholderImageScaleType = "fitXY"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/img_icon"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:textColor="@color/txt2a2a2a"/>

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="13sp"
        android:layout_below="@+id/txt_title"
        android:layout_alignLeft="@+id/txt_title"
        android:textColor="@color/txt999999" />

</RelativeLayout>
