<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:img="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="185dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            img:placeholderImage="@drawable/default_pic"
            img:placeholderImageScaleType="fitXY" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_icon"
            android:background="#60000000"
            android:padding="15dp"
            android:text="撸起袖子这样干：韶钢劳动竞赛成为年度扭亏关键撸起袖子这样干：韶钢劳"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@color/divider" />
    </RelativeLayout>

</LinearLayout>
