<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="36dp"
    android:paddingRight="36dp"
    android:paddingBottom="36dp"
    android:paddingTop="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/edit_password1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lj_color_transparent"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="@color/divider"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/lj_color_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/edit_password2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lj_color_transparent"
            android:gravity="center_vertical"
            android:hint="请确认密码"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="@color/divider"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/lj_color_divider" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="18dp"
        android:layout_marginTop="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_btn_agree"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="请输入6-12位数字或字母"
            android:textColor="@color/txt999999"
            android:textSize="16sp" />


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:onClick="onCommit"
        android:background="@drawable/selector_btn_grey_blue"
        android:text="完成"/>
</LinearLayout>
