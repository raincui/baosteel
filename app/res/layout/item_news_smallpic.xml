<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:img = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_icon"
        android:layout_width="90dp"
        android:layout_height="60dp"
        img:placeholderImage="@drawable/default_pic"
        img:placeholderImageScaleType = "fitXY"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_icon"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_icon"
        android:maxLines="2"

        android:text="宝武未来如何发展？顶尖技术专家都去建言献策了"
        android:textColor="@color/txt2a2a2a"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_title"
        android:layout_below="@+id/txt_title">

        <TextView
            android:id="@+id/btn_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_stroke_blue"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="我是标签"
            android:textColor="@color/txtblue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_label"
            android:background="@drawable/shape_stroke_blue"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="我是标签"
            android:textColor="@color/txtblue"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txt_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_time"
            android:text="12:00"
            android:visibility="gone"
            android:textColor="@color/txt999999"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="12:00"
            android:drawablePadding="5dp"
            android:textColor="@color/txt999999"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
